<%= render "flash" %>



</br>
<table class="table table-bordered">

  <tbody>
    <% @lists.each do |list| %>
      <% if list.completed %>
      <tr class=" ">
        <td class="striker"><%= link_to list.description, edit_list_path(list) %></td>
        <td>
          <%= form_with(model: list) do |form| %>
          <%= form.text_field :description, type: "hidden" %>
          <%= form.check_box :completed, :checked => false, :style => "visibility: hidden" %>
            <%= form.submit "Task incomplete", class:"btn btn-secondary btn-sm text-white"  %>
          <% end %>
        </td>
        <td>
          <%#= link_to 'Show', list, class:"btn btn-dark btn-sm text-white" %>
          <%#= link_to 'Edit', edit_list_path(list), class:"btn btn-dark btn-sm text-white" %>
          <center>
          <%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm text-white" %>
          </center>
        </td>
      </tr>
      <% else %>
      <tr>
      <td><%= link_to list.description, edit_list_path(list) %></td>
      <td>
        <%= form_with(model: list) do |form| %>
        <%= form.text_field :description, type: "hidden" %>
        <%= form.check_box :completed, :checked => true, :style => "visibility: hidden" %>
          <%= form.submit "Task Completed", class:"btn btn-outline-info btn-sm"   %>
        <% end %>
      </td>
        <td>
          <%#= link_to 'Show', list, class:"btn btn-dark btn-sm text-white" %>
          <%#= link_to 'Edit', edit_list_path(list), class:"btn btn-dark btn-sm text-white" %>
          <center>
          <%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm text-white" %>
          </center>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>

